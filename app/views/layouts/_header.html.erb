<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("static_pages.sample_app"), root_path, id: "logo" %>
    <nav>
    <ul class="nav navbar-nav navbar-right">
      <%= link_to t("english"), locale:"en" %>
        <%= link_to t("vietnamese"), locale:"vi" %>
        <li><%= link_to t("static_pages.home.home"), root_path %></li>
        <li><%= link_to t("static_pages.home.help"), help_path %></li>
        <% if logged_in? %>
        <li><%= link_to t("user.new.users"), users_path %></li>
          <li class="dropdown">  
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">  
              <%= t("users.acc")%> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("user.new.profile"), current_user %></li>
              <li><%= link_to t("user.new.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("users.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
          <% else %>
            <li><%= link_to t("users.login"), login_path %></li>
          <% end %>
      </ul>
    </nav>
  </div>
</header>
