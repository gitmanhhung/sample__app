<% provide :title, t("user.new.sign_up") %>
<h1><%= t("user.new.sign_up") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label :name, t("user.new.name") %>
      <%= f.text_field :name %>
      <%= f.label :email %>
      <%= f.email_field :email %>
      <%= f.label :password, t("user.new.password") %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation, t("user.new.confirmation") %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit t("user.new.create_my_account"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
