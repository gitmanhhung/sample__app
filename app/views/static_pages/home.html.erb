<% provide :title, t("static_pages.home.home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
        <h3>Micropost Feed</h3>
        <%= render "shared/feed" %>
      </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t("static_pages.home.welcome") %></h1>
  <h2>
    <%= t("static_pages.home.this_home") %>
    <%= link_to t("static_pages.home.sample_application"), "http://www.railstutorial.org/" %>
    <%= t("static_pages.home.ruby_on_rails")%>
  </h2>
  <%= link_to t("static_pages.home.sign_up"), '#', class: "btn btn-lg btn-primary" %>
</div>
<%= render "layouts/contact_about" %>
<% end %>
